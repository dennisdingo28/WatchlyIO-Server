generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  User              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model EarlyUser {
  id        String   @id
  email     String   @unique
  createdAt DateTime @default(now())
}

model PasswordResetToken {
  id      String   @id
  email   String
  token   String   @unique
  expires DateTime

  @@unique([email, token])
}

model Route {
  pathname    String
  visited     Int       @default(1)
  workspaceId String
  Workspace   Workspace @relation(fields: [workspaceId], references: [id])

  @@id([pathname, workspaceId])
}

model User {
  id            String      @id
  name          String?
  email         String?     @unique
  emailVerified DateTime?
  image         String?
  password      String?
  Account       Account[]
  Workspace     Workspace[]
}

model VerificationToken {
  id      String   @id
  email   String
  token   String   @unique
  expires DateTime

  @@unique([email, token])
}

model Workspace {
  id          String          @id
  name        String
  createdAt   DateTime        @default(now())
  apiKey      String          @unique
  roomId      String          @unique @default(cuid())
  userId      String
  Route       Route[]
  User        User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  onlineUsers WorkspaceUser[]
}

model WorkspaceUser {
  id             String              @id
  joinedAt       DateTime            @default(now())
  disconnectedAt DateTime?
  status         WorkspaceUserStatus @default(ONLINE)
  country        String
  countryCode    String
  platform       String
  browser        String
  currentPath    String @default("/")
  workspaceId    String
  createdAt      DateTime            @default(now())
  workspace      Workspace           @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
}

enum WorkspaceUserStatus {
  ONLINE
  OFFLINE
}
